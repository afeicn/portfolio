---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Primary: Indigo-600 */
    --aw-color-primary: rgb(79 70 229);
    /* Secondary: Slate-800 */
    --aw-color-secondary: rgb(30 41 59);
    /* Accent: Sky-500 */
    --aw-color-accent: rgb(14 165 233);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(2 6 23);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Primary: Indigo-400 (Lighter for dark mode) */
    --aw-color-primary: rgb(129 140 248);
    /* Secondary: Slate-700 */
    --aw-color-secondary: rgb(51 65 85);
    /* Accent: Sky-400 */
    --aw-color-accent: rgb(56 189 248);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    
    /* Background: Slate-950 (Modern Tech Dark) */
    --aw-color-bg-page: rgb(2 6 23);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
